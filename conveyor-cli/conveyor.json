{
  "name": "conveyor-cli",
  "template": {
    "group": "com.github.maximtereshchenko.conveyor",
    "name": "conveyor-template",
    "version": "1.0.0"
  },
  "plugins": [
    {
      "group": "${conveyor.schematic.group}",
      "name": "executable-conveyor-plugin",
      "configuration": {
        "classes.directory": "${conveyor.schematic.directory}/.conveyor/classes",
        "main.class": "com.github.maximtereshchenko.conveyor.cli.Main",
        "destination": "${conveyor.schematic.directory}/.conveyor/${conveyor.schematic.name}-${conveyor.schematic.version}-executable.jar"
      }
    }
  ],
  "dependencies": [
    {
      "group": "${conveyor.schematic.group}",
      "name": "conveyor-core"
    },
    {
      "group": "${conveyor.schematic.group}",
      "name": "jackson-adapter"
    }
  ]
}