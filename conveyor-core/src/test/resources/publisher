package ${normalizedName};

import com.github.maximtereshchenko.conveyor.common.api.*;
import com.github.maximtereshchenko.conveyor.plugin.api.*;

import java.nio.file.*;
import java.util.*;

public final class ${normalizedName} implements ConveyorPlugin {

    @Override
    public String name() {
        return "${name}";
    }

    @Override
    public List<ConveyorTaskBinding> bindings(ConveyorSchematic schematic, Map<String, String> configuration) {
        return List.of(
            new ConveyorTaskBinding(
                Stage.PUBLISH,
                Step.RUN,
                new Task(schematic, configuration.get("repository"), Paths.get(configuration.get("path")))
            )
        );
    }

    private static final class Task implements ConveyorTask {

        private final ConveyorSchematic schematic;
        private final String repository;
        private final Path path;

        Task(ConveyorSchematic schematic, String repository, Path path) {
            this.schematic = schematic;
            this.repository = repository;
            this.path = path;
        }

        @Override
        public String name() {
            return "";
        }

        @Override
        public Optional<Path> execute() {
            schematic.publish(repository, path, ArtifactClassifier.JAR);
            return Optional.empty();
        }
    }
}
